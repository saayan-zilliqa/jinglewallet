extends layout

block layout-content
  div.View.WelcomeView
    h1.Banner Jingle Wallet

        form(class="form-signin" method="POST" enctype='multipart/form-data' action="/login")
            
            #error
                if error
                    p.text-danger #{errorText}


            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Enter keystore

            label( for="inputKeystore" class="sr-only") Keystore File
            input(type="file" name="keystore" id="inputKeystore" class="form-control" placeholder="Keystore File" required autofocus)

            label(for="inputPassword" class="sr-only") Password
            input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)

            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Restore Wallet
